{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["apps/api/**", "packages/**", "prisma/**"]
  },
  "deploy": {
    "startCommand": "npx prisma migrate deploy && node dist/apps/api/main.js",
    "restartPolicyType": "ON_FAILURE",
    "rootDirectory": "./"
  }
}