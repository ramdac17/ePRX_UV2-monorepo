{
  "name": "eprx-uv1-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "node scripts/update-ip.js && turbo run dev",
    "build": "nest build --path ./tsconfig.json",
    "build:api": "turbo run build --filter=api",
    "sync-ip": "node scripts/update-ip.js",
    "start:api": "node apps/api/dist/main.js",
    "postinstall": "pnpm --filter api exec prisma generate --schema=./prisma/schema.prisma",
    "start:railway": "npx prisma migrate deploy --schema=./prisma/schema.prisma && node dist/main.js"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "cross-env": "^7.0.3",
    "prisma": "^7.3.0"
  },
  "prisma": {
    "schema": "apps/api/prisma/schema.prisma"
  }
}